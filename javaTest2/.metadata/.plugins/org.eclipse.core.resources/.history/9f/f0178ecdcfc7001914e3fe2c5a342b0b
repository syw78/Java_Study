package chapter06.ex20;

public class MyMetric {
	private double kilo;
	private double mile;
	
	public MyMetric() {
		
		this(0.0,0.0);
		
	}
	public MyMetric(double kilo, double mile) {
		
		this.kilo=kilo;
		this.mile=mile;
	}
	
	static double kiloToMile(double kilo) {
		return kilo*0.625;
	}
	static double mileTokilo(double mile) {
		return mile*1.609;
	}
	

}
