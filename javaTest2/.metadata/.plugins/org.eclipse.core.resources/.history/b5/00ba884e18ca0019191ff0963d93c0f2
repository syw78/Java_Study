package chapter09.comparable;

public class Rectangle implements comparable {
	
	public int width;
	public int height;
	Circle circle=null;
	public Rectangle(int width , int height) {
		super();
		this.width=width;
		this.height=height;
	}
	@Override
	public String toString() {
		return "Rectangle [width=" + width + ", height=" + height + "]";
	}
	
	public int getArea() {
		return width*height;
	}
	@Override
	public int compareTo(Object obj) {
		
		//우리가 구현해야될 로직이다.
		
		if(obj instanceof Rectangle) {
			Rectangle rec = (Rectangle)obj;
			if((width+height)>(rec.height+rec.width)) {
				return 1;
			}else if ((width+height)<(rec.height+rec.width)) {
				return -1;
			}
			else if(obj instanceof Circle) {
				circle=(Circle)obj;
				if(this.getArea()>circle.getArea()) {
					
					return 1;
				}else if(this.getArea()<circle.getArea()) {
					return -1;
				}else {
					return 0;
				}
			}
		}else {
			System.out.println("어디있는가 Rectangle~~");
			System.exit(0);
		} 
		return 0;
	}
	
	
}
